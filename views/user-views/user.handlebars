<h2>User: {{user.fname}} {{user.lname}}</h2>
<p>
    <a href="/users/{{user.id}}/edit"><button type="button" class="btn btn-primary">Edit</button></a>
    {{>delete-user userId=user.id}}
</p>
<table class="table table-striped">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>
  <tr>
    <td>{{user.fname}}</td>
    <td>{{user.lname}}</td>
    <td>{{user.email}}</td>
  </tr>
</table>


<h3>Calendars</h3>
<ul>
  {{#each calendars as |calendar|}}
    <li><a href="/calendars/{{calendar.id}}">{{calendar.calendarName}}</a></li>
  {{/each}}
</ul>